<%
  date = locals.fetch(:date)
  style = locals.fetch(:style)
  holidays = %w(
    12/23/2019
    12/24/2019
    12/25/2019
    12/26/2019
    12/27/2019
    12/30/2019
    12/31/2019
    01/01/2020
    01/02/2020
    01/03/2020
    01/20/2020
    02/17/2020
    02/18/2020
    02/19/2020
    02/20/2020
    02/21/2020
  )
%>
<% if date.saturday? || date.sunday? || holidays.include?(date.strftime('%m/%d/%Y')) %>
  <%= render 'shared/no_e_parking', locals: { style: style } %>
<% else %>
  <%= render 'shared/e_parking', locals: { style: style } %>
<% end %>
